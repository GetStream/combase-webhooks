{
	"name": "Zendesk",
	"category": ["sync", "tickets", "crm"],
	"icon": "./zendesk.jpg",
	"configuration": {
		"user": {
			"type": "String",
			"inputType": "email",
			"required": true
		},
		"token": {
			"type": "String",
			"inputType": "password",
			"required": true
		},
		"subdomain": {
			"type": "String",
			"inputType": "text",
			"required": true
		}
	},
	"triggers": {
		"zendesk:ticket.new": "createTicket",
		"chat:channel.created": "syncTicket"
	}
}