{
	"name": "Zendesk",
	"category": ["sync", "tickets", "crm"],
	"icon": "./zendesk.jpg",
	"configuration": {
		"user": {
			"type": "String",
			"inputType": "email",
			"required": true
		},
		"token": {
			"type": "String",
			"inputType": "password",
			"required": true
		},
		"subdomain": {
			"type": "String",
			"inputType": "text",
			"required": true
		}
	},
	"triggers": {
		"zendesk.pull": "handlePull",
		"zendesk.clickthrough": "handleClickthrough",
		"zendesk.channelback": "handleChannelback"
	}
}